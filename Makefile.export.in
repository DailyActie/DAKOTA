# $Id:$
#
##########################################################################
# 
# To link with everything required by DAKOTA, simply add 
# $(DAKOTA_EXPORT_LIBS) to the linker command line in your Makefile.
#
##########################################################################

DAKOTA_LIBDIR = @abs_builddir@/src/.libs

DAKOTA_EXPORT_LIBS = -L$(DAKOTA_LIBDIR) -ldakota \
                      $(DAKOTA_MPI_LIBDIR) $(DAKOTA_MPI_LIBS)

#DAKOTA_DEPS =  @abs_top_builddir@/src/.libs/libdakota.la

##########################################################################
#
# Set the absolute path to the Dakota build directory
#
##########################################################################

DAKOTA_BUILD_DIRECTORY = @abs_builddir@/src

############################################################################
#
# Export path to Dakota header files (including dakota_config.h)
#
############################################################################

DAKOTA_INCLUDES = -I$(DAKOTA_BUILD_DIRECTORY) -I$(DAKOTA_BUILD_DIRECTORY)/..

############################################################################
#
# Export compiler settings 
#
############################################################################

# Extra definitions
DAKOTA_DEFS = @DEFS@

# Fortran compilation flags
DAKOTA_FFLAGS = @FFLAGS@

# C compilation flags
DAKOTA_CFLAGS = @CFLAGS@

# C++ compilation flags
DAKOTA_CXXFLAGS = @CXXFLAGS@

# linker flags
DAKOTA_LDFLAGS = @LDFLAGS@


############################################################################
#
# Export MPI settings 
#
############################################################################

# MPI libraries
DAKOTA_MPI_LIBS = @MPI_LIBS@

# MPI include path
DAKOTA_MPI_INC = @MPI_INC@

# Path to MPI libraries
DAKOTA_MPI_LIBDIR = @MPI_LIBDIR@

# Path to MPI root
DAKOTA_MPI_DIR = @MPI_DIR@


############################################################################
#
# Export Fortran, BLAS, and LAPACK libraries
#
############################################################################

# Fortran & standard math libs
DAKOTA_FLIBS = @FLIBS@

# BLAS libraries
DAKOTA_BLAS_LIBS = @BLAS_LIBS@

# LAPACK libraries
DAKOTA_LAPACK_LIBS = @LAPACK_LIBS@

# Extra libraries
DAKOTA_EXTRA_LIBS = @LIBS@

