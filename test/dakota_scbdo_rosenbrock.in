strategy,
	single_method #graphics
	  method_pointer = 'OPTIM'

###########################
# begin opt specification #
###########################
method,
	id_method = 'OPTIM'
	model_pointer = 'OPTIM_M'
	npsol_sqp
	  convergence_tolerance = 1.e-6
	  output verbose

model,
	id_model = 'OPTIM_M'
	nested
	  variables_pointer  = 'OPTIM_V'
	  sub_method_pointer = 'UQ'
	  responses_pointer  = 'OPTIM_R'
# maximize beta
	  primary_response_mapping   = 0. 0. -1.

variables,
	id_variables = 'OPTIM_V'
	continuous_design = 1
	  initial_point     = -0.75
	  lower_bounds      = -2.
	  upper_bounds      =  2.
	  descriptors       = 'x1'

responses,
# NOTE: This specifies the TOTAL RESPONSE for the optimization,
#       which is a combination of nested & interface responses.
	id_responses = 'OPTIM_R'
	objective_functions = 1
	analytic_gradients			#0,#1,#4,#5
#	numerical_gradients			#2,#3,#6,#7
#	  method_source dakota			#2,#3,#6,#7
#	  interval_type central			#2,#3,#6,#7
#	  fd_gradient_step_size = 1.e-6		#2,#3,#6,#7
	no_hessians

##########################
# begin UQ specification #
##########################
method,
	id_method = 'UQ'
	model_pointer = 'UQ_M'
	stoch_collocation
	  quadrature_order = 5			#0,#1,#2,#3
#	  sparse_grid_level = 1			#4,#6
#	  sparse_grid_level = 2 non_nested	#5,#7
# Inverse mapping:
#	  reliability_levels = 3.
# Forward mapping:
	  response_levels = 10.
	  compute reliabilities

model,
	id_model = 'UQ_M'
	single
	  variables_pointer = 'UQ_V'
	  interface_pointer = 'UQ_I'
	  responses_pointer = 'UQ_R'

variables,
	id_variables = 'UQ_V'
#	active all				#1,#3,#5,#7
	continuous_design = 1
	normal_uncertain = 1
      	  means             =  0.
	  std_deviations    =  1.
	  descriptors       = 'x2'

interface,
	id_interface = 'UQ_I'
	direct
	  analysis_driver = 'rosenbrock'
#	  deactivate restart_file evaluation_cache

responses,
	id_responses = 'UQ_R'
	response_functions = 1
	analytic_gradients			#0,#4
#	no_gradients				#1,#2,#3,#5,#6,#7
	no_hessians
