#@ p*: Label=SmokeTest
#@ p0: MPIProcs=2
#@ p1: MPIProcs=3

#environment,
#	graphics

method,
	model_pointer = 'HIERARCH'
        multilevel_sampling				
	  pilot_samples = 20 seed = 1237
	  max_iterations = 5
	  convergence_tolerance =    .1			#s0,#p0,#p1
#	  convergence_tolerance =   .01			#s1
#	  convergence_tolerance =  .001			#s2
#	  convergence_tolerance = .0001			# too expensive
	output silent

model,
	id_model = 'HIERARCH'
	surrogate hierarchical
	  ordered_model_fidelities = 'SIM1'
	  correction additive zeroth_order

model,
	id_model = 'SIM1'
	simulation
	  solution_level_control = 'dssiv_1'
	  solution_level_cost = 1. 2. 4. 8. 16.

variables,
	uniform_uncertain = 9	 # number of cosine terms in soln expansion
	  lower_bounds      =  9*-1.
	  upper_bounds      =  9* 1.
	discrete_state_set
	  integer = 1 # even poly degree for odd mesh pts including boundary
            set_values = 4 8 16 32 64
	  string = 1  # form of kernel (refer to Yang,Lei,Baker,Lin)
	    initial_state = 'cosine'
            set_values = 'cosine' 'exponential' # TO DO: 'gaussian'

interface,
	direct
	  analysis_driver = 'steady_state_diffusion_1d'

responses,
	response_functions = 3	 # number of soln pts excl. +/-5% (symmetric)
	no_gradients
	no_hessians
