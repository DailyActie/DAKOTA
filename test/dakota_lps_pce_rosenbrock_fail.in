environment,
	#graphics
	  method_pointer = 'OPTIM'

###########################
# begin opt specification #
###########################
method,
	id_method = 'OPTIM'
	model_pointer = 'OPTIM_M'
        list_parameter_study
#	  list_of_points = -2.0
	  list_of_points = .9
	  output silent
#	npsol_sqp
#	  convergence_tolerance = 1.e-6
#	  output verbose

model,
	id_model = 'OPTIM_M'
	nested
	  variables_pointer  = 'OPTIM_V'
	  sub_method_pointer = 'UQ'
	  responses_pointer  = 'OPTIM_R'
# maximize beta
	  primary_response_mapping   = 0. 0. -1.

variables,
	id_variables = 'OPTIM_V'
	continuous_design = 1
#	  initial_point     = -0.75
	  lower_bounds      = -2.
	  upper_bounds      =  2.
	  descriptors       = 'x1'

responses,
# NOTE: This specifies the TOTAL RESPONSE for the optimization,
#       which is a combination of nested & interface responses.
	id_responses = 'OPTIM_R'
	objective_functions = 1
	analytic_gradients
	no_hessians

##########################
# begin UQ specification #
##########################
method,
	id_method = 'UQ'
	model_pointer = 'UQ_M'
	polynomial_chaos
	  quadrature_order = 5					#0,#1
#	  collocation_ratio = 9 seed = 376287			#2,#3
#	  expansion_order = 4			   		#2,#3
#	  orthogonal_least_interpolation			#4
#	  collocation_points = 40				#4
# Inverse mapping:
#	  reliability_levels = 3.
# Forward mapping:
	  response_levels = 10.
	  compute reliabilities

model,
	id_model = 'UQ_M'
	single
	  variables_pointer = 'UQ_V'
	  interface_pointer = 'UQ_I'
	  responses_pointer = 'UQ_R'

variables,
	id_variables = 'UQ_V'
#	active all				#1,#3,#4
	continuous_design = 1
	normal_uncertain = 1
      	  means             =  0.
	  std_deviations    =  1.
	  descriptors       = 'x2'

interface,
	id_interface = 'UQ_I'
	direct					#0,#1
	  analysis_driver = 'rosenbrock'	#0,#1
#	fork		    			#2,#3,#4
#	  analysis_driver = 'rosenbrock_fail'	#2,#3,#4

responses,
	id_responses = 'UQ_R'
	response_functions = 1
	analytic_gradients			#0,#2
#	no_gradients				#1,#3,#4
	no_hessians
